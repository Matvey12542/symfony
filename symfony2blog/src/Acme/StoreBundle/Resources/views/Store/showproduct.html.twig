{% extends 'AcmeStoreBundle::Layout.html.twig' %}

{% block title %} {{ product.name }} {% endblock %}
{% block sidebar%}
    <aside>
        <h3>{{ 'author' | trans }}</h3>
    </aside>

{% endblock %}

{% block section %}
    <article class="product">
        <header>
            <h1>{{ product.name }}</h1>
            <p>{{ product.id }}</p>
        </header>
        <p>{{ product.description | nl2br }}</p>
    </article>

{% endblock %}